include ../button/button.pug

mixin header()
    .header
        .header__content
            img(class='header__logo' src='assets/images/logo.svg', alt="logo")
            .header__top-menu
                ul(class='header__navbar')
                    li(class='header__navbar-item header__navbar-item_active') О нас
                    li(class='header__navbar-item') Услуги 
                        i(class='material-icons') expand_more
                        ul(class='header__nested-list')
                            li(class='header__nested-list-item') Обслуживание номеров
                            li(class='header__nested-list-item')  Парковка
                            li(class='header__nested-list-item')  Персональный сейф
                            li(class='header__nested-list-item')  Интернет
                            li(class='header__nested-list-item')  Кабельное телевидние
                            li(class='header__nested-list-item')  Питание
                    li(class='header__navbar-item') Вакансии
                    li(class='header__navbar-item') Новости
                    li(class='header__navbar-item') Соглашения
                        i(class='material-icons') expand_more
                        ul(class='header__nested-list')
                            li(class='header__nested-list-item') Правила проживание
                            li(class='header__nested-list-item')  Бонусная программа
                            li(class='header__nested-list-item')  Политика конфиденциальности
                        
                .header__button-entry_container
                    +button('borderButton', 'Войти')(class='header__button-entry')
                +button('regularButton', 'Зарегистрироваться')(class='header__button-registration')