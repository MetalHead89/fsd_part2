mixin checkboxButton(labelText, id, isChecked, richCheckbox=false, richText)
    - var additionalClass = ''
    if richCheckbox
        - additionalClass = 'checkbox-button__label_rich'
    .checkbox-button
        input(class='checkbox-button__checkbox-element' type='checkbox' checked=isChecked id=id)
        label(class='checkbox-button__label ' + additionalClass, for=id) !{labelText}
        if richCheckbox
            .checkbox-button__rich-text !{richText}