include ../like-button/like-button.pug

mixin guestReview(photo, name, days, likes, checkedLike, rewiew)
    - let lastVisit = ''
    - let days10 = days % 10
    - let days100 = days % 100
    if days10 == 1 && days100 != 11
        - lastVisit = days + ' день '
    else if (days10 >= 2 && days10 <= 4) && !(days100 >= 12 && days100 <= 14)
        - lastVisit = days + ' дня '
    else
        - lastVisit = days + ' дней '

    - lastVisit = lastVisit + ' назад '


    .guest-review
        .guest-review__guest
            img(src=photo class='guest-review__photo')
            .guest-review__guest-details
                .guest-review__guest-name !{name}
                .last-visit !{lastVisit}
        .guest-review__rewiew
            .guest-review__likes
                +likeButton(likes, checkedLike)
            .guest-review__rewiew-text !{rewiew}