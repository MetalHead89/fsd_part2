<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title UI kit
    body
        .central-container

            //- COLORS AND TYPE
            h1(class="section-title") Colors & Type
            .section-block
                .colors-and-type
                    .colors-and-type__colors
                        each color in ['Dark Shade 100%', 'Dark Shade 75%', 'Dark Shade 50%', 'Dark Shade 25%', 'Dark Shade 5%', 'Purple', 'Green']
                            +color-block(color)
                    .colors-and-type__type
                        - var r = [['h1', 'This one is the sub-section or widget title'], ['h2', 'Next one is the item title inside widgets'], ['h3', 'THIS IS A LABEL OR CTA TEXT'], ['span', 'This is the body text which is used for most of&nbsp;the design, like paragraphs, lists, etc.']]
                        each blockType in r
                            +type-block(blockType[0], blockType[1])
            
            //- Form Elements
            h1(class="section-title") Form Elements
            .section-block
                .form-elements
                        .form-elements__column
                            .module
                                h3(class='module__title') Text Field
                                +text_field()
                            .module
                                +dropdown('guests', 'dropdown')
                            .module
                                h3(class='module__title') masked text field
                                +text_field('Email', 'masked')
                            .module
                                +dropdown('date', 'date Dropdown')
                            div(class='module module_width266')
                                .module
                                    +dropdown('filter_date', 'filter date dropdown')
                                .module
                                    h3(class='module__title') subscription text field
                                    +text_field('Email', 'subscription')
                                .module
                                    +dropdown('comfort', 'dropdown')
                                .module
                                    +expandable-checkbox-list([['Завтрак', 'breakfast'], ['Письменный стол', 'desk', true], ['Стул для кормления', 
                                    'feedingChair', true], ['Кроватка', 'crib', true], ['Телевизор', 'tv'], ['Шампунь', 'shampoo']], 'expandable checkbox list')
                                .module
                                    +roomDetails('insert_emoticon', 'Комфорт', 'Шумопоглащающие стены')
                                    +roomDetails('location_city', 'Удобство', 'Окно в каждой из спален')
                        .form-elements__column
                            .module
                                h3(class='module__title') Checkbox Buttons
                                +checkboxButton('Можно курить', 'noSmoking')
                                +checkboxButton('Можно с питомцами', 'pets', true)
                                +checkboxButton('Можно пригласить гостей (до 10 человек)', 'guests', true)
                            .module
                                h3(class='module-title') Radio Buttons
                                +radioButton([['radio1', 'radio', 'male', 'Мужчина', true], ['radio2', 'radio', 'female', 'Женщина']])
                            .module
                                h3(class='module-title') toggle
                                +toggle('Получать спецпредложения', 'specialOffers', 'specialOffers')
                            .module
                                h3(class='module-title') like button
                                .likeButtonSection
                                    +like-button(2)
                                    +like-button(12, true)
                            .module
                                h3(class='module-title') rate button
                                .rateButtonSection
                                    +rateButton(4)
                                    +rateButton(5)
                            .module
                                h3(class='module-title') RICH CHECKBOX BUTTONS
                                +checkboxButton('Широкий коридор', 'wideCorridor', false, true, 'Ширина коридоров в номере не&nbsp;менее 91 см.')
                                +checkboxButton('Помощник для инвалидов', 'disabledAssistant', false, true, 'На 1 этаже вас встретит специалист и&nbsp;проводит до номера.')
                        .form-elements__column
                            .module
                                +rangeSlider('Range Slider')
                            .buttons-block
                                h3(class='module__title') Buttons
                                .module
                                    +button()
                                .module
                                    +button('borderButton')
                                .module.module-2-buttons
                                    +button('onlyTextButton')
                                    +button('onlyTextButton', 'click me', 'gray')
                                .module
                                    +button('arrowButton', 'перейти к оплате')