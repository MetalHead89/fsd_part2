<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title UI kit
    body
        .central-container
            //- COLORS AND TYPE
            h1(class="section-title") Colors & Type
            .section-block
                .colors-and-type
                    .colors-and-type__colors
                        each colorBlock in config.colorBlocks
                            +color-block({theme: colorBlock.theme, colorName: colorBlock.colorName, colorCode: colorBlock.colorCode})
                    .colors-and-type__type
                        each typeBlock in config.typeBlocks
                            +type-block({tag: typeBlock.tag, text: typeBlock.text})
            
            //- FORM ELEMENTS
            h1(class="section-title") Form Elements
            .section-block
                .form-elements
                    .form-elements__three-column-layout
                        .form-elements__column.form-elements__column1
                            .module
                                h3(class='module__title') Text Field
                                +text-field(config.textField)
                            .module
                                +dropdown(config.dropdown)
                            .module
                                h3(class='module__title') masked text field
                                +text-field(config.maskedTextField)
                            .module
                                +dropdown(config.dateDropdown)
                            div(class='module module_width266')
                                .module
                                    +dropdown(config.filterDateDropdown)
                                .module
                                    h3(class='module__title') subscription text field
                                    +text-field({placeholderText: 'Email', type: 'subscription'})
                                .module
                                    +dropdown({type: 'comfort', id: 'uiComfortDrop', title: 'dropdown'})
                                .module
                                    +expandable-checkbox-list({checkboxes: [{label: 'Завтрак', id: 'breakfast'}, {label: 'Письменный стол', id: 'desk', checked: true}, {label: 'Стул для кормления', 
                                    id: 'feedingChair', checked: true}, {label: 'Кроватка', id: 'crib', checked: true}, {label: 'Телевизор', id: 'tv'}, {label: 'Шампунь', id: 'shampoo'}], title: 'expandable checkbox list', id: 'expandable- checkbox-list'})
                        .form-elements__column.form-elements__column2.form-elements__column_side-paddings
                            .module
                                h3(class='module__title') Checkbox Buttons
                                +checkbox-button({label: 'Можно курить', id: 'noSmoking'})
                                +checkbox-button({label: 'Можно с питомцами', id: 'pets', checked: true})
                                +checkbox-button({label: 'Можно пригласить гостей (до&nbsp10&nbspчеловек)', id: 'guests', checked: true})
                            .module
                                h3(class='module-title') Radio Buttons
                                +radio-button({buttons: [{id: 'radio1', name: 'radio', value: 'male', text: 'Мужчина', checked: true}, {id: 'radio2', name: 'radio', value: 'female', text: 'Женщина'}]})
                            .module
                                h3(class='module-title') toggle
                                +toggle({text: 'Получать спецпредложения', name: 'specialOffers', id: 'specialOffers'})
                            .module
                                h3(class='module-title') like button
                                .likeButtonSection
                                    +like-button({likesCount: 2})
                                    +like-button({likesCount: 12, checked: true})
                            .module
                                h3(class='module-title') rate button
                                .rateButtonSection
                                    +rate-button({rate: 4})
                                    +rate-button({rate: 5})
                            .module
                                h3(class='module-title') RICH CHECKBOX BUTTONS
                                +checkbox-button({label: 'Широкий коридор', id: 'wideCorridor', checked: false, rich: true, text: 'Ширина коридоров в номере не&nbsp;менее 91 см.'})
                                +checkbox-button({label: 'Помощник для инвалидов', id: 'disabledAssistant', checked: false, rich: true, text: 'На 1 этаже вас встретит специалист и&nbsp;проводит до номера.'})
                        .form-elements__column.form-elements__column3
                            .module
                                +range-slider({title: 'Range Slider', min1: 0, min2: 0, max1: 15000, max2: 15000, value1: 5000, value2: 10000})
                            .buttons-block
                                h3(class='module__title') Buttons
                                .module
                                    +button({text: 'click me'})
                                .module
                                    +button({text: 'click me', type: 'border'})
                                .module.module-2-buttons
                                    +button({text: 'click me', type: 'onlyText'})
                                    +button({text: 'click me', type: 'onlyText', theme: 'gray'})
                                .module
                                    +button({text: 'перейти к оплате', type: 'arrow'})
                                .module
                                    h3(class='module__title') Pagination
                                    +pagination({numberOfPages: 15, activePage: 1})
                                .module.module__bullet-list
                                    h3(class='module__title') bullet list
                                    +bullet-list({
                                        menuItems: ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а&nbsp;выезд до 12:00']
                                    })
                    .form-elements__two-column-layout
                        .form-elements__column.form-elements__column_no-margin
                            .module
                                +room-details({icon: 'insert_emoticon', title: 'Комфорт', description: 'Шумопоглащающие стены'})
                                +room-details({icon: 'location_city', title: 'Удобство', description: 'Окно в каждой из спален'})
                        .form-elements__column_100-percent-width
                            .module.module__guest-review
                                +guest-review({photo: '../images/reviewPhoto1.png', name: 'Мурад Сарафанов', days: 5, likes: 12, checkedLike: true, review: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
            h1(class="section-title") Cards
            .section-block
                .cards
                    .cards_column
                        .module
                            +search-room-card()
                        .module
                            +registration-card()
                    .cards_column
                        .module
                            +room-rate-card({'roomNumber': 888, 'lux': true, 'roomRate': 9990, 'serviceCost': -2179, 'additionalServiceCost': 300})
                        .module
                            +entry-card()
                    .cards_column
                        .module.module_calendar
                            +calendar
                        .cards_column-270
                            .module
                                +number-card({roomNumber: 888, lux: true, roomRate: 9990, rating: 5, reviewsNumber: 145, images: ['../images/number1.png', '../images/number6.png', '../images/number10.png', '../images/number7.png']})
                            .module
                                +number-card({roomNumber: 840, lux: false, roomRate: 9900, rating: 4, reviewsNumber: 65, images: ['../images/number2.png', '../images/number12.png', '../images/number8.png', '../images/number3.png']})
            h1(class="section-title") Headers & Footers
        +header()
        +footer()