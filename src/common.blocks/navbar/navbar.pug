mixin navbar( {type, items} = {} )

  if type === undefined
    - type = 'horizontal'

  if items === undefined
    - items = []

  - let navbarClass = `navbar__list navbar__list_${type}`;
  - let navbarItemClass = `navbar__item navbar__item_${type}`;
  - let navbarHiddenListClass = `navbar__hidden-list navbar__hidden-list_${type}`;
  - let navbarHiddenListItemClass = `navbar__hidden-list-item navbar__hidden-list-item_${type}`;
  - let dropdownTitleClass = `navbar__dropdown-title navbar__dropdown-title_${type}`;
  - let separatorClass = `navbar__separator navbar__separator_${type}`;

  <nav class='navbar'>
    ul(class=navbarClass)
      each item in items
        if item.items
          li(class=navbarItemClass)
            div(class=dropdownTitleClass)
              span !{item.title}
              i.material-icons.navbar__expand-more-button expand_more
            ul(class=navbarHiddenListClass)
              each hiddenItem in item.items
                li(class=navbarHiddenListItemClass) !{hiddenItem}
        else
          li(class=navbarItemClass) !{item}
      li(class=navbarItemClass + ' navbar__item_with-separator')
        div(class=separatorClass)
      li(class=navbarItemClass + ' navbar__item_with-name') Виталий Бакалов
      li(class=navbarItemClass)
        .navbar__button-entry-container
          +button({type: 'border', text: 'войти', theme: 'paddingsS'})
      li(class=navbarItemClass)
        navbar__button-registration-container
          +button({text: 'зарегистрироваться', theme: 'paddingsL'})
  </nav>
