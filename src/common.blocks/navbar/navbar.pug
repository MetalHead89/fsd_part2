mixin navbar({ type = 'horizontal', items } = {})
  - let typeModifier = type;
    if typeModifier !== 'horizontal' && typeModifier !== 'vertical'
      - typeModifier = 'horizontal'

  - let navbarClass = `navbar__list navbar__list_${typeModifier}`;
  - let navbarItemClass = `navbar__item navbar__item_${typeModifier}`;
  - let navbarHiddenListClass = `navbar__hidden-list navbar__hidden-list_${typeModifier}`;
  - let navbarHiddenListItemClass = `navbar__hidden-list-item navbar__hidden-list-item_${typeModifier}`;
  - let dropdownTitleClass = `navbar__dropdown-title navbar__dropdown-title_${typeModifier}`;
  - let separatorClass = `navbar__separator navbar__separator_${typeModifier}`;

  <nav class='navbar'>
    ul(class=navbarClass)
      each item in items
        if item.items
          li(class=navbarItemClass)
            div(class=dropdownTitleClass)
              span !{item.title}
              i.navbar__expand-more-button expand_more
            ul(class=navbarHiddenListClass)
              each hiddenItem in item.items
                li(class=navbarHiddenListItemClass) !{hiddenItem}
        else
          li(class=navbarItemClass) !{item}
          
      li(class=navbarItemClass + ' navbar__item_with-separator')
        div(class=separatorClass)
      li(class=navbarItemClass + ' navbar__item_with-name') Виталий Бакалов
      li(class=navbarItemClass)
        .navbar__button-entry-container
          +button({type: 'border', text: 'войти', theme: 'paddingsS'})
      li(class=navbarItemClass)
        navbar__button-registration-container
          +button({text: 'зарегистрироваться', theme: 'paddingsL'})
  </nav>
