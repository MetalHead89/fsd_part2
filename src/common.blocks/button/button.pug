mixin button({ type, text = 'click me', disabled = false, theme } = {})
  - let button_class = 'button';

  if type === 'border'
    - button_class += ' button_with-border';
  else if type === 'onlyText'
    - button_class += ' button_only-text';
  else if type == 'arrow'
    - button_class += ' button_with-arrow';
  else
    - button_class += ' button_regular';

  if theme === 'paddingsL'
    - button_class += ' button_paddings_l';
  if theme === 'paddingsS'
    - button_class += ' button_paddings_s';
  if theme === 'horizontalPaddingsL'
    - button_class += ' button_horizontal-paddings-size_l';
  if theme === 'horizontalPaddingsS'
    - button_class += ' button_horizontal-paddings-size_s';

  button(type="button", value=text, disabled=disabled, class=button_class) !{text}
    if type == 'arrow'
      i.button__arrow arrow_forward
