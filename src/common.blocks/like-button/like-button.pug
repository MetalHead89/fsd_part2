mixin like-button({ checked, likesCount = 0 } = {})
  - let checkedClass = 'like-button_unchecked';
  - let icon = 'favorite_border';
  
  if checked
    - checkedClass = 'like-button_checked';
    - icon = 'favorite';

  div(class='like-button ' + checkedClass)
    i.material-icons.like-button__heart !{icon}
    .like-button__like-counter !{likesCount}
