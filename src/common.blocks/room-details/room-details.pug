mixin room-details( {icon, title, description} = {} )

  if icon === undefined 
    - icon = ''

  if title === undefined 
    - title = 'Комфорт'

  if description === undefined 
    - description = ''

  .room-details
    i.material-icons.room-details__icon !{icon}
    .room-details__text
      .room-details__title !{title}
      .room-details__description !{description}
