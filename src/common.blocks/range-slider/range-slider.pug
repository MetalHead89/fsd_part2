mixin range-slider(args)
    //- title='диапазон цены'
    .range-slider
        .range-slider__header-section
            h3(class='range-slider__title') !{args.title}
            .range-slider__range-label 5 000&#8381 - 10 000&#8381
        input(class='range-slider__input-range range-slider__input_left' type="range" min='0' max='15000' value=5000)
        input(class='range-slider__input-range range-slider__input_right' type="range" min='0' max='15000' value=10000)
        .range-slider__slider
            .range-slider__track
            .range-slider__range
            div(class='range-slider__thumb range-slider__thumb_left')
            div(class='range-slider__thumb range-slider__thumb_right')