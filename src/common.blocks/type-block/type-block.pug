mixin type-block(args)
  - let tag = 'Body';
  - let tagTextClass = '';

  if args.tag === 'h1'
    - tag = 'H1';
    - tagTextClass = 'type-block__text_header-size_l'
  else if args.tag === 'h2'
    - tag = 'H2';
    - tagTextClass = 'type-block__text_header-size_m'
  else if args.tag === 'h3'
    - tag = 'H3';
    - tagTextClass = 'type-block__text_header-size_s'

  .type-block
    #{args.tag}.type-block__tag !{tag}
    #{args.tag}(class=`type-block__text ${tagTextClass}`) !{args.text}
