mixin checkbox-button( {rich, checked, id, label, text} = {} )
  - let additionalClass = '';
  - let checkboxClass = 'checkbox-button';
  - let labelClass = 'checkbox-button__label';

  if rich
    - checkboxClass += ' checkbox-button_type_rich';
    - labelClass += ' checkbox-button__label_type_rich';

  div(class=checkboxClass)
    input.checkbox-button__checkbox-element(
      type="checkbox",
      checked=checked,
      id=id
    )
    label(class=labelClass, for=id) !{label}
    if rich
      .checkbox-button__rich-text !{text}
